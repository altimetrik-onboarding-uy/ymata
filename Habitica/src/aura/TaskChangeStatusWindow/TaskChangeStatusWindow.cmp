<aura:component >
	<aura:attribute name="isOpen" type="boolean" default="false"/>
    <aura:attribute name="taskItem" type="Task__c"/>
    <aura:attribute name="options" type="List" />
    <aura:attribute name="selectedStatus" type="String" default="{!v.taskItem.Status__c}"/>
    <aura:handler name="init" value="{!this}" action="{!c.loadOptions}"/> 
    
    <aura:registerEvent name="updatedTaskStatus" type="c:UpdateTaskEvent"/>
    
    <!--Use aura:if tag to display Model Box, on the bese of conditions. [isOpen boolean attribute] -->   
    <aura:if isTrue="{!v.isOpen}">        
        <!--Modal Box--> 
        <div role="dialog" class="slds-modal slds-fade-in-open ">
            <div class="slds-modal__container">
                <!-- Modal Box Header-->
                <div class="slds-modal__header">
                    <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeModel}">
                        X
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 id="header99" class="slds-text-heading--medium">Update Task Status</h2>
                </div>
                <!--Modal Box Body-->
                <div class="slds-modal__content slds-p-around_medium" style="height:150px;">
                    <!-- Init form -->
                    <lightning:select name="status" label="Status:" aura:id="status" value="{!v.selectedStatus}">
                        <aura:iteration items="{!v.options}" var="item">
                            <option text="{!item.label}" value="{!item.value}" selected="{!item.selected}"/>
                        </aura:iteration>
                    </lightning:select>
                    <!-- End form -->
                </div>
                <!--Modal Box Footer-->
                <div class="slds-modal__footer">
                    <button class="slds-button slds-button--neutral" onclick="{!c.closeModel}" >Cancel</button>
                    <button class="slds-button slds-button--brand" onclick="{!c.changeStatusAction}">Change status</button>
                </div>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop--open"></div>
        <!--Modal Box Ends-->
    </aura:if>
</aura:component>